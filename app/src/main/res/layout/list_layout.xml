<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:padding="8dp">

    <!-- Thumbnail Image -->

    <!-- Movie Title -->
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:textColor="#484A4C"
            android:layout_height="wrap_content" android:layout_below="@+id/name_list_view" android:layout_alignParentEnd="true"
            android:id="@+id/date_list_view"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:id="@+id/hour_list_view" android:layout_below="@+id/name_list_view" android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"/>
    <TextView
            android:id="@+id/name_list_view"
            android:text="asdkjahskdjha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:layout_marginTop="13dp" android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/status_list_view"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_list_view"
            android:textColor="#484A4C"
            android:layout_marginStart="16dp" android:layout_below="@+id/date_list_view"
            android:layout_toEndOf="@+id/img"/>
    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img"
            android:src="@drawable/ic_profile_logo"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFCF06"
            android:layout_marginRight="8dp"
            android:layout_width="80dp" android:layout_height="80dp"
            android:layout_alignParentTop="true" android:layout_toEndOf="@+id/hour_list_view"
            android:layout_marginStart="10dp"/>
</RelativeLayout>