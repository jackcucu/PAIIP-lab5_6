<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/ic_profile"
        tools:context="com.jack.laboratory5_6.activity.ProfileActivity">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_alarm_menu"
            android:background="#FF0000"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:id="@+id/main_menu_button_profile"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_add_yellow"
            android:background="#FF0000"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true" android:id="@+id/add_button_profile"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_add_grey"
            android:background="#F9F6ED"
            android:id="@+id/pattern_button_profile" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Your Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pattern_text_add"
            android:textColor="#FFCF06" android:textSize="18sp"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/add_button_profile"
            android:layout_toEndOf="@+id/pattern_text_add" android:layout_marginStart="15dp" android:layout_marginTop="57dp"
            android:id="@+id/user_text_profile" android:textColor="#FFCF06" android:textSize="18sp"/>
    <TextView
            android:text="Tap here yur profile's status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/user_text_profile"
            android:layout_alignStart="@+id/user_text_profile" android:layout_marginTop="22dp" android:id="@+id/status_text_profile"
            android:textColor="@android:color/background_light" android:textSize="12sp"/>
    <TextView
            android:text="32 Schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/status_text_profile"
            android:layout_alignStart="@+id/status_text_profile" android:layout_marginTop="22dp" android:id="@+id/number_schedule_text_profile"
            android:textColor="@android:color/background_light"/>
    <TextView
            android:text="Set Unlock Pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignBottom="@+id/pattern_button_profile"
            android:layout_alignStart="@+id/textView24" android:layout_marginBottom="20dp"
            android:id="@+id/textView25" android:textColor="#FF0000"/>
    <TextView
            android:text="Set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20" android:textColor="#484A4C"
            android:layout_alignBottom="@+id/avatar_button_profile" android:layout_alignStart="@+id/username_btton_profile"/>
    <TextView
            android:text="User Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name_text_profile" android:textColor="#484A4C"
            android:layout_alignBottom="@+id/user_name_button_profile" android:layout_alignStart="@+id/textView21"/>
    <TextView
            android:text="Change Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21" android:textColor="#FF0000"
            android:layout_above="@+id/user_name_text_profile" android:layout_alignStart="@+id/textView20"/>
    <TextView
            android:text="Alarm Circles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23" android:textColor="#FF0000" android:layout_alignBottom="@+id/imageButton6"
            android:layout_alignStart="@+id/user_name_text_profile" android:layout_marginBottom="20dp"/>
    <TextView
            android:text="12 Friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24" android:textColor="#484A4C"
            android:layout_alignBottom="@+id/imageButton6" android:layout_alignStart="@+id/textView23"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_add_grey"
            android:background="#ffffff"
            android:id="@+id/avatar_button_profile"
            android:layout_marginBottom="45dp"
            android:layout_above="@+id/textView21" android:layout_alignParentEnd="true"/>
    <TextView
            android:text="Default Pattern Set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/patt" android:textColor="#484A4C" android:layout_alignBottom="@+id/pattern_button_profile"
            android:layout_alignStart="@+id/textView25"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_add_grey"
            android:background="#ffffff"
            android:id="@+id/imageButton6"
            android:layout_marginBottom="49dp"
            android:layout_above="@+id/textView25" android:layout_alignParentEnd="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_add_grey"
            android:background="#F9F6ED"
            android:id="@+id/user_name_button_profile"
            android:layout_marginBottom="48dp"
            android:layout_above="@+id/textView23" android:layout_alignParentEnd="true"/>
    <TextView
            android:text="Change Avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_btton_profile" android:textColor="#FF0000"
            android:layout_marginEnd="44dp" android:layout_above="@+id/textView20"
            android:layout_toStartOf="@+id/user_text_profile"/>
    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_profile_logo"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFCF06"
            android:layout_below="@+id/main_menu_button_profile" android:layout_alignEnd="@+id/username_btton_profile"
            android:layout_marginTop="33dp"/>
</RelativeLayout>
